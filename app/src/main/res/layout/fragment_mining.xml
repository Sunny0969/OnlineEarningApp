<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/material_dynamic_primary5"
    tools:context=".fragment.mining">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mining Center"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/material_dynamic_primary3"
        android:padding="16dp"
        android:elevation="8dp"
        android:layout_marginBottom="24dp">

        <ProgressBar
            android:id="@+id/mining_progress"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:progressDrawable="@drawable/custom_progress_bar"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/coins_mined_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Coins Mined: 0.000"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/time_remaining_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time Remaining: 24:00:00"
            android:textColor="@color/white"
            android:textSize="18sp"/>
    </LinearLayout>

    <Button
        android:id="@+id/start_mining_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Mining"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:backgroundTint="@color/material_dynamic_primary6"
        android:layout_marginTop="16dp"
        android:elevation="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Note: Mining will automatically complete in 24 hours and add 1 coin to your balance"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_marginTop="24dp"
        android:lineSpacingExtra="4dp"/>

</LinearLayout>