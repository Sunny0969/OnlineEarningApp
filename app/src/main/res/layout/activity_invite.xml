<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/material_dynamic_primary1"


    tools:context=".inviteActivity">

    <Toolbar
        android:id="@+id/toolbar"
        android:background="#F5F5F5"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back_arrow"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:contentDescription="Back button" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Invite &amp; Earn"
                android:textColor="@color/material_dynamic_primary4"
                android:textSize="22sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </Toolbar>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_margin="32dp"
        android:src="@drawable/gift" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/referCodeTV"
        android:layout_centerInParent="true"
        android:layout_margin="12dp"
        android:background="@drawable/refer_bg"
        android:gravity="center_horizontal"
        android:minWidth="160dp"
        android:padding="12dp"
        android:text="Your Refer Code"
        android:textColor="@color/material_dynamic_primary1"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/referCodeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/refer_bg"
        android:gravity="center_horizontal"
        android:minWidth="160dp"
        android:padding="12dp"
        android:text="Earning App"
        android:textSize="22sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="180dp"
        android:layout_centerHorizontal="true"
        android:text="Claim points"
        android:id="@+id/redeemBtn"
        android:layout_above="@+id/shareBtn"
        android:background="@drawable/btn"
        android:backgroundTint="@color/white"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="180dp"
        android:layout_margin="26dp"
        android:layout_centerHorizontal="true"
        android:text="Share your Code"
        android:layout_alignParentBottom="true"
        android:id="@+id/shareBtn"
        android:background="@drawable/btn"
        android:backgroundTint="@color/white"/>
</RelativeLayout>