<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_bg"
    tools:context=".LoginActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:padding="8dp"
        android:text="Login"
        android:id="@+id/headerTV"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="6dp">
        <EditText
            android:id="@+id/emailET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/text_box"
            android:elevation="2dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="10dp" />

        <EditText
            android:id="@+id/passwordET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/text_box"
            android:elevation="2dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="10dp" />

    </LinearLayout>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:indeterminateTint="@color/material_dynamic_primary4"
        android:id="@+id/progressBar"
        android:visibility="gone"
        android:layout_above="@+id/loginBtn"
        android:layout_centerHorizontal="true"
        android:layout_margin="22sp"
/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:background="@drawable/btn"
        android:textColor="@color/white"
        android:layout_above="@+id/signupTV"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="12dp"
        android:id="@+id/loginBtn"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:padding="8dp"
        android:text="Create an account? Sign-up"
        android:id="@+id/signupTV"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:textColor="@color/material_dynamic_primary4"
        android:textSize="16sp"
        android:textStyle="bold" />
</RelativeLayout>